{
    "compilerOptions": {
        "target": "ES2023",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "outDir": "release",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "pub",
        "release"
    ]
}